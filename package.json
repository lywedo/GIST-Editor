{
  "name": "gist-editor",
  "displayName": "Gist Editor",
  "description": "A VS Code extension for managing GitHub Gists",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gist-editor",
          "title": "Gist Editor",
          "icon": "$(github)"
        }
      ]
    },
    "views": {
      "gist-editor": [
        {
          "id": "gist-editor.gistList",
          "name": "My Gists",
          "when": "true"
        },
        {
          "id": "gist-editor.starred",
          "name": "Starred Gists",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "gist-editor.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gist-editor.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "gist-editor.createGist",
        "title": "Create New Gist",
        "icon": "$(add)"
      },
      {
        "command": "gist-editor.openGist",
        "title": "Open Gist",
        "icon": "$(globe)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gist-editor.refresh",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        },
        {
          "command": "gist-editor.createGist",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
