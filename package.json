{
  "name": "gist-editor",
  "displayName": "Gist Editor",
  "description": "A VS Code extension for managing GitHub Gists",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gist-editor",
          "title": "Gist Editor",
          "icon": "$(github)"
        }
      ]
    },
    "views": {
      "gist-editor": [
        {
          "id": "gist-editor.gistList",
          "name": "My Gists",
          "when": "true",
          "icon": "$(person)"
        },
        {
          "id": "gist-editor.starred",
          "name": "Starred Gists",
          "when": "true",
          "icon": "$(star)"
        }
      ]
    },
    "commands": [
      {
        "command": "gist-editor.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gist-editor.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "gist-editor.createGist",
        "title": "Create New Gist",
        "icon": "$(add)"
      },
      {
        "command": "gist-editor.openGist",
        "title": "Open Gist",
        "icon": "$(globe)"
      },
      {
        "command": "gist-editor.setupToken",
        "title": "Configure GitHub Token",
        "icon": "$(gear)"
      },
      {
        "command": "gist-editor.testAPI",
        "title": "Test GitHub API",
        "icon": "$(debug)"
      },
      {
        "command": "gist-editor.checkScopes",
        "title": "Check GitHub Token Permissions",
        "icon": "$(shield)"
      },
      {
        "command": "gist-editor.saveGist",
        "title": "Save Gist",
        "icon": "$(save)"
      },
      {
        "command": "gist-editor.createGistFromFile",
        "title": "Create Gist from Current File"
      },
      {
        "command": "gist-editor.createGistFromSelection",
        "title": "Create Gist from Selection"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gist-editor.refresh",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        },
        {
          "command": "gist-editor.createGist",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        },
        {
          "command": "gist-editor.setupToken",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "gist-editor.createGistFromFile",
          "when": "editorHasSelection == false",
          "group": "gist@1"
        },
        {
          "command": "gist-editor.createGistFromSelection",
          "when": "editorHasSelection",
          "group": "gist@1"
        }
      ],
      "commandPalette": [
        {
          "command": "gist-editor.createGistFromFile",
          "when": "editorIsOpen"
        },
        {
          "command": "gist-editor.createGistFromSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Gist Editor",
      "properties": {
        "gistEditor.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for accessing gists",
          "scope": "application"
        }
      }
    },
    "keybindings": [
      {
        "command": "gist-editor.saveGist",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus && resourceScheme == gist"
      },
      {
        "command": "gist-editor.createGist",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g"
      },
      {
        "command": "gist-editor.createGistFromFile",
        "key": "ctrl+alt+shift+g",
        "mac": "cmd+alt+shift+g",
        "when": "editorIsOpen"
      },
      {
        "command": "gist-editor.createGistFromSelection",
        "key": "ctrl+alt+shift+s",
        "mac": "cmd+alt+shift+s",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
