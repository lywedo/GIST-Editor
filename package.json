{
  "name": "gist-editor",
  "displayName": "Gist Editor",
  "description": "Manage GitHub Gists directly from VS Code. Create, edit, view, and organize your gists without leaving the editor.",
  "version": "1.1.0",
  "publisher": "lywedo",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lywedo/gist-editor"
  },
  "homepage": "https://github.com/lywedo/gist-editor",
  "bugs": {
    "url": "https://github.com/lywedo/gist-editor/issues"
  },
  "keywords": [
    "github",
    "gist",
    "code-sharing",
    "snippet",
    "productivity",
    "github-gists"
  ],
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gist-editor",
          "title": "Gist Editor",
          "icon": "$(github)"
        }
      ]
    },
    "views": {
      "gist-editor": [
        {
          "id": "gist-editor.gistList",
          "name": "My Gists",
          "when": "true",
          "icon": "$(person)"
        },
        {
          "id": "gist-editor.starred",
          "name": "Starred Gists",
          "when": "true",
          "icon": "$(star)"
        },
        {
          "id": "gist-editor.comments",
          "name": "Gist Comments",
          "when": "true",
          "icon": "$(comment)"
        }
      ]
    },
    "commands": [
      {
        "command": "gist-editor.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gist-editor.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "gist-editor.createGist",
        "title": "Create New Gist",
        "icon": "$(add)"
      },
      {
        "command": "gist-editor.openGist",
        "title": "Open Gist",
        "icon": "$(globe)"
      },
      {
        "command": "gist-editor.setupToken",
        "title": "Configure GitHub Token",
        "icon": "$(gear)"
      },
      {
        "command": "gist-editor.testAPI",
        "title": "Test GitHub API",
        "icon": "$(debug)"
      },
      {
        "command": "gist-editor.checkScopes",
        "title": "Check GitHub Token Permissions",
        "icon": "$(shield)"
      },
      {
        "command": "gist-editor.saveGist",
        "title": "Save Gist",
        "icon": "$(save)"
      },
      {
        "command": "gist-editor.createGistFromFile",
        "title": "Create Gist from Current File"
      },
      {
        "command": "gist-editor.createGistFromSelection",
        "title": "Create Gist from Selection"
      },
      {
        "command": "gist-editor.deleteGist",
        "title": "Delete Gist",
        "icon": "$(trash)"
      },
      {
        "command": "gist-editor.renameGist",
        "title": "Rename Gist",
        "icon": "$(edit)"
      },
      {
        "command": "gist-editor.addFileToGist",
        "title": "Add File to Gist",
        "icon": "$(new-file)"
      },
      {
        "command": "gist-editor.deleteFileFromGist",
        "title": "Delete File from Gist",
        "icon": "$(trash)"
      },
      {
        "command": "gist-editor.renameFileInGist",
        "title": "Rename File in Gist",
        "icon": "$(edit)"
      },
      {
        "command": "gist-editor.viewGistHistory",
        "title": "View Gist History",
        "icon": "$(history)"
      },
      {
        "command": "gist-editor.openInGitHub",
        "title": "Open in GitHub",
        "icon": "$(link-external)"
      },
      {
        "command": "gist-editor.toggleStarGist",
        "title": "Star/Unstar Gist",
        "icon": "$(star)"
      },
      {
        "command": "gist-editor.createSubfolderInFolder",
        "title": "Create Subfolder",
        "icon": "$(new-folder)"
      },
      {
        "command": "gist-editor.addGistComment",
        "title": "Add Comment",
        "icon": "$(comment)"
      },
      {
        "command": "gist-editor.deleteGistComment",
        "title": "Delete Comment",
        "icon": "$(trash)"
      },
      {
        "command": "gist-editor.viewGistCommentOnGitHub",
        "title": "View Comment on GitHub",
        "icon": "$(link-external)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gist-editor.refresh",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        },
        {
          "command": "gist-editor.createGist",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        },
        {
          "command": "gist-editor.setupToken",
          "when": "view == gist-editor.gistList",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "gist-editor.createGistFromFile",
          "when": "editorHasSelection == false",
          "group": "gist@1"
        },
        {
          "command": "gist-editor.createGistFromSelection",
          "when": "editorHasSelection",
          "group": "gist@1"
        }
      ],
      "commandPalette": [
        {
          "command": "gist-editor.createGistFromFile",
          "when": "editorIsOpen"
        },
        {
          "command": "gist-editor.createGistFromSelection",
          "when": "editorHasSelection"
        }
      ],
      "view/item/context": [
        {
          "command": "gist-editor.addFileToGist",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "inline"
        },
        {
          "command": "gist-editor.renameGist",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "1_modification@1"
        },
        {
          "command": "gist-editor.addFileToGist",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "1_modification@2"
        },
        {
          "command": "gist-editor.viewGistHistory",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "1_modification@3"
        },
        {
          "command": "gist-editor.openInGitHub",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "1_modification@4"
        },
        {
          "command": "gist-editor.toggleStarGist",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "1_modification@5"
        },
        {
          "command": "gist-editor.deleteGist",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "2_danger@1"
        },
        {
          "command": "gist-editor.renameFileInGist",
          "when": "view == gist-editor.gistList && viewItem == gistFile",
          "group": "1_modification@1"
        },
        {
          "command": "gist-editor.openInGitHub",
          "when": "view == gist-editor.gistList && viewItem == gistFile",
          "group": "1_modification@2"
        },
        {
          "command": "gist-editor.deleteFileFromGist",
          "when": "view == gist-editor.gistList && viewItem == gistFile",
          "group": "2_danger@1"
        },
        {
          "command": "gist-editor.createSubfolderInFolder",
          "when": "view == gist-editor.gistList && viewItem == gistFolder",
          "group": "1_modification@1"
        },
        {
          "command": "gist-editor.addGistComment",
          "when": "view == gist-editor.gistList && viewItem == gist",
          "group": "1_modification@5"
        },
        {
          "command": "gist-editor.deleteGistComment",
          "when": "view == gist-editor.gistList && viewItem == gistComment",
          "group": "2_danger@1"
        },
        {
          "command": "gist-editor.viewGistCommentOnGitHub",
          "when": "view == gist-editor.gistList && viewItem == gistComment",
          "group": "1_modification@1"
        },
        {
          "command": "gist-editor.deleteGistComment",
          "when": "view == gist-editor.comments && viewItem == gistComment",
          "group": "1_modification@1"
        },
        {
          "command": "gist-editor.viewGistCommentOnGitHub",
          "when": "view == gist-editor.comments && viewItem == gistComment",
          "group": "1_modification@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Gist Editor",
      "properties": {
        "gistEditor.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for accessing gists",
          "scope": "application"
        }
      }
    },
    "keybindings": [
      {
        "command": "gist-editor.saveGist",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus && resourceScheme == gist"
      },
      {
        "command": "gist-editor.createGist",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g"
      },
      {
        "command": "gist-editor.createGistFromFile",
        "key": "ctrl+alt+shift+g",
        "mac": "cmd+alt+shift+g",
        "when": "editorIsOpen"
      },
      {
        "command": "gist-editor.createGistFromSelection",
        "key": "ctrl+alt+shift+s",
        "mac": "cmd+alt+shift+s",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}